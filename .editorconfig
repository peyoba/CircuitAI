root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,css,scss,html,vue}]
indent_size = 2

[*.{md,yml,yaml}]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[Makefile]
indent_style = tab